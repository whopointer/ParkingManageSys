<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.parkingmanagesys.Dao.BookingMapper">
    <!--根据carId查bookingId-->
    <select id="selectByCarId" resultType="java.lang.Integer" parameterType="java.lang.String">
        SELECT Booking_Id
        FROM booking
        WHERE Car_id=#{carId}
    </select>

    <!--    根据bookingId查询carId-->
    <select id="selectByBookingId" resultType="java.lang.String" parameterType="java.lang.Integer">
        SELECT Car_Id
        FROM booking
        WHERE Booking_Id=#{bookingId}
    </select>

<!--添加预约信息-->
    <insert id="insertBooking" parameterType="Booking">
        INSERT INTO booking(Car_Id,Booking_Id)
        VALUES (#{carId},#{bookingId})
    </insert>

    <!--出场后根据carId删除booking-->
    <delete id="deleteByCarId" parameterType="java.lang.String">
        DELETE
        FROM booking
        WHERE Car_Id=#{carId}
    </delete>

</mapper>