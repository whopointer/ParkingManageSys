<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.parkingmanagesys.Dao.ParkingMapper">
    <!--根据carId查spaceId-->
    <select id="selectByCarId" resultType="java.lang.Integer" parameterType="java.lang.String">
        SELECT Space_Id
        FROM parking
        WHERE Car_id=#{carId}
    </select>

    <!--    根据spaceId查询carId-->
    <select id="selectByBookingId" resultType="java.lang.String" parameterType="java.lang.Integer">
        SELECT Car_Id
        FROM parking
        WHERE Space_Id=#{spaceId}
    </select>

    <!--添加停车信息-->
    <insert id="insertParking" parameterType="Parking">
        INSERT INTO parking(Car_Id,Space_Id)
        VALUES (#{carId},#{spaceId})
    </insert>

    <!--出场后根据carId删除parking-->
    <delete id="deleteByCarId" parameterType="java.lang.String">
        DELETE
        FROM parking
        WHERE Car_Id=#{carId}
    </delete>

</mapper>